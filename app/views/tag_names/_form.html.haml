= form_for @tag_name do |f|
  - if @tag_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag_name.errors.count, "error")} prohibited this tag_name from being saved:"
      %ul
        - @tag_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .btn.waves-effect.waves-light
    = f.submit 'Save'
